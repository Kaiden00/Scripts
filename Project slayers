
local hook = clonefunction(hookfunction)

hook(getrawmetatable, function()
    return wait(9e9)
end)

hook(hookmetamethod, function()
    return wait(9e9)
end)

hook(getnamecallmethod, function()
    return
end)

task.wait(1)

local DataTable = {
    "Yen",
    "Spins",
}

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/wally-rblx/uwuware-ui/main/main.lua"))() --credits to Jan
local Window = Library:CreateWindow("Project Retards")
Window:AddLabel({text = "Script - Kaiden#2444"})
Window:AddLabel({text = "Risk of ban!"})

local LocalPlayerName = game.Players.LocalPlayer.Name
local PlayerData = game:GetService("ReplicatedStorage")["Player_Data"][LocalPlayerName]

local Remote = game.ReplicatedStorage.Remotes.To_Server.Handle_Initiate_S
local FakeObject = PlayerData.Settings.Volume["1"]

--ui
local Folder = Window:AddFolder("Main")
local AmountBox = Folder:AddBox({text = "Amount", flag = "Amount"})

for _, Data in ipairs(DataTable) do
    Folder:AddButton({text = Data, callback = function()
        local Object = PlayerData:FindFirstChild(Data, true)
        local Amount = Library.flags.Amount
        
        if not Amount or Amount == "" then
            Amount = 1
        end 
        
        Amount = tonumber(Amount)
        if not Amount then return end
        
        Remote:FireServer("addstatpoints", FakeObject, Object, -Amount)
    end})
end

Folder:AddButton({text = "MAX LEVEL", callback = function()
    local Object = PlayerData:FindFirstChild("Exp")["2"]
    if not Object then return end
    
    Remote:FireServer("addstatpoints", FakeObject, Object, Object.Value - 5940)
end})

local AmountBox = Folder:AddBox({text = "Desired Clan", flag = "Clan"})

local globalClan = false

Folder:AddToggle({text = "Auto Spin", callback = function(Toggle)
    globalClan = Toggle
    
    while globalClan and task.wait(0.1) do
        local SpinFunc = game:GetService("ReplicatedStorage").Remotes.To_Server.Handle_Initiate_S_
        local WantedClan = Library.flags.Clan or "Kamido"
        
        SpinFunc:InvokeServer("check_can_spin", PlayerData.Spins, PlayerData.Clan)
        if string.lower(PlayerData.Clan.Value) == string.lower(WantedClan) then break end
    end
end})


Folder:AddButton({text = "Max Mastery(Everything)", callback = function()
    for _, Mastery in ipairs(PlayerData["Mastery_Bundle"]:GetChildren()) do
        local Amount = Mastery.Max.Value - Mastery.Value.Value
        
        Remote:FireServer("addstatpoints", FakeObject, Mastery.Value, -Amount)
    end 
end})

Library:Init()
